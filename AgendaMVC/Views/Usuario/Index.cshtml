@model IEnumerable<AgendaDomain.Entities.Usuario>

@{
    ViewBag.Title = "Listagem de Amigos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Relação de AMIGOS Cadastrados</div>
    <div class="panel-body">
        <div>
            @using (Html.BeginForm())
            {
                <p>Digite o nome</p>
                <input type="text" name="termo" id="termo" placeholder="Digite a pesquisa" />
                <button type="submit">Filtrar</button>
            }
        </div>

        <table class="table table-striped table-hover table-responsive">

            <tr>
                <th>
                    <strong>Aniversariantes do Dia</strong>
                </th>
            </tr>
            <tbody>
                @foreach (var item in ViewBag.List)
                {
                    <tr>
                        <td> @item</td>
                    </tr>
                }
            </tbody>
            <tr>
                <td> @ViewBag.Message</td>
            </tr>

        </table>
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SobreNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProxAniv)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SobreNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProxAniv)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id })|
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id })|
                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um novo CONTATO", "Create", null, new { @class = "btn btn-danger" })
    </div>
</div>