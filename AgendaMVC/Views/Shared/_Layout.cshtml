<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Agenda MVC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Agenda MVC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Listagem", "Index", "Usuario")</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="page-header btn-danger">
                <h1>Desenvolvimento em Web ASP.NET MVC</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3 col-md-3 btn-success">
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" class="active">@Html.ActionLink("Início", "Index", "Home")</li>
                    <li role="presentation">@Html.ActionLink("Listagem", "Index", "Usuario")</li>
                    <li role="presentation">@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li role="presentation">@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
            <div class="col-xs-9 col-md-9">
                <br />
                @RenderBody()
            </div>
            <br />

        </div>
        <div class="row">
            <div class="col-xs-12 col-md-12 btn-danger">
                <small>&copy; @DateTime.Now.Year - Agenda MVC</small>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @section ScriptPage {
        <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")">"</script>
        <script type="text/javascript">$(document).ready(function () { $('.table').dataTable(); });</script>
        $('.table').dataTable({"order": [[1,"asc"]]});}


</body>
</html>
